rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. REGLAS ESPECÍFICAS PARA TUS RELOJES
    match /watches/{document=**} {
      // Todo el mundo puede ver (leer) los relojes
      allow read: if true;

      // Solo el administrador puede crear, editar o borrar
      // (Reemplaza con tu correo real de admin)
      allow write: if request.auth != null && request.auth.token.email == 'javier.tapia.r@gmail.com';
    }

    // 2. BLOQUEO TOTAL POR DEFECTO
    // Cualquier otra colección que no sea 'watches' será inaccesible
    match /{document=**} {
      allow read, write: if false;
    }
  }
}